<Window x:Class="CC.ImageOverlay.Views.HotkeySettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ホットキー設定"
        Height="300" Width="400"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Background="#0A1929">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="⌨ ホットキー設定" 
                   Foreground="White" FontSize="16" FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Hotkey List -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <!-- Overlay Hotkey -->
            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="オーバーレイ表示/非表示" Foreground="#90CAF9" FontSize="12" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="OverlayHotkey" Grid.Column="0" 
                             Text="Ctrl+Shift+O"
                             Background="#0D2137" Foreground="White" 
                             BorderBrush="#1E3A5F" Padding="12,8"
                             PreviewKeyDown="Hotkey_PreviewKeyDown"
                             IsReadOnly="True" Cursor="Hand"/>
                    <Button Grid.Column="1" Content="変更" Click="ChangeOverlayHotkey_Click"
                            Background="#00B4D8" Foreground="White"
                            Padding="16,8" Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>

            <!-- Memo Hotkey -->
            <StackPanel>
                <TextBlock Text="メモ表示/非表示" Foreground="#90CAF9" FontSize="12" Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="MemoHotkey" Grid.Column="0" 
                             Text="Ctrl+Shift+M"
                             Background="#0D2137" Foreground="White" 
                             BorderBrush="#1E3A5F" Padding="12,8"
                             PreviewKeyDown="Hotkey_PreviewKeyDown"
                             IsReadOnly="True" Cursor="Hand"/>
                    <Button Grid.Column="1" Content="変更" Click="ChangeMemoHotkey_Click"
                            Background="#00B4D8" Foreground="White"
                            Padding="16,8" Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="キャンセル" Click="Cancel_Click"
                    Background="#1E3A5F" Foreground="White"
                    Padding="16,8" Margin="0,0,8,0"/>
            <Button Content="保存" Click="Save_Click"
                    Background="#00B4D8" Foreground="White"
                    Padding="24,8"/>
        </StackPanel>
    </Grid>
</Window>
